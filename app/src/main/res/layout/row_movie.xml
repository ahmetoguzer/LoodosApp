<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/imgMovie"
            android:layout_width="130dp"
            android:layout_height="180dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@+id/imgMovie"
            android:fontFamily="@font/ralewayblack"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/tvPlot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="5dp" android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/tvPlot"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgMovie"
            android:fontFamily="@font/ralewaymedium"
            android:ellipsize="end"
            android:textSize="13sp"
            android:maxLines="3"
            android:layout_marginStart="5dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/tvYear"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" android:layout_marginTop="3dp"/>

    <TextView
            android:id="@+id/Year"
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:fontFamily="@font/ralewaybold"
            android:text="Year : "
            android:gravity="center|left"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/imgMovie"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPlot"
            android:layout_marginStart="5dp"/>
    <TextView
            android:id="@+id/tvYear"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:fontFamily="@font/ralewaysemibold"
            android:textSize="13sp"
            android:gravity="center|left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvActors"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/Year"
            android:layout_marginBottom="40dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/tvPlot"/>

    <TextView
            android:id="@+id/Actor"
            android:layout_width="52dp"
            android:layout_height="20dp"
            android:fontFamily="@font/ralewaybold"
            android:text="Rating : "
            android:gravity="center|left"
            android:textSize="13sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgMovie"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/tvActors"
            app:layout_constraintTop_toBottomOf="@+id/Year"
            android:layout_marginStart="5dp"/>


    <TextView
            android:id="@+id/tvRating"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:fontFamily="@font/ralewaysemibold"
            android:textSize="13sp"
            android:gravity="center|left"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/Actor"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvYear" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvActors"/>
    <TextView
            android:id="@+id/tvActors"
            android:layout_width="0dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toEndOf="@+id/imgMovie"
            android:fontFamily="@font/ralewaymedium"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/Actor" android:layout_marginBottom="8dp"/>

</android.support.constraint.ConstraintLayout>