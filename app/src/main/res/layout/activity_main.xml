<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">


    <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="26dp"
            tools:layout_editor_absoluteX="0dp" tools:ignore="MissingConstraints"/>

    <ImageView
            android:id="@+id/imgProgress"
            android:layout_width="167dp"
            android:layout_height="134dp"
            android:src="@drawable/custom_loading"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/main_frame" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>